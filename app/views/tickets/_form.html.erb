<%= form_for([@project,@ticket]) do |f| %>
  <% if @ticket.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@ticket.errors.count, "error") %> prohibited this ticket from being saved:</h2>

      <ul>
      <% @ticket.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name, "チケット名" %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :status, "タイプ" %><br />
    <%= f.select :status, @status_array %>
  </div>
  <div class="field">
    <%= f.label :person, "担当者" %><br />
    <%= f.text_field :person %>
  </div>
  <div class="field">
    <%= f.label :priority, "優先度" %><br />
    <%= f.select :priority, @priority_array %>
  </div>
  <div class="field">
    <%= f.label :finished, "終了済み?" %><br />
    <%= f.check_box :finished %>
  </div>
  <div class="field">
    <%= f.label :memo, "メモ" %><br />
    <%= f.text_area :memo %>
  </div>
  <%= f.hidden_field :project_id, :value => @project.id %>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
